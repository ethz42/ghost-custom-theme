            content: '使用Uniswap进行DEX交易，享受20%手续费返还。基于链上交易自动计算返佣。'
        },
        'Binance': {
            title: 'Binance 返佣详情',
            content: '注册币安享受30%现货/合约交易手续费返还。全球最大交易所，安全可靠。'
        },
        'Bitget': {
            title: 'Bitget 返佣详情',
            content: '注册Bitget享受40%现货/合约交易手续费返还。跟单交易领导者，适合新手。'
        }
    };
    
    const detail = details[exchange];
    if (detail) {
        alert(`${detail.title}\n\n${detail.content}`);
        // 或者你可以创建一个更好看的弹窗
        // showCustomModal(detail.title, detail.content);
    }
}

// 确保联系弹窗功能在cashback页面正常工作
document.addEventListener('DOMContentLoaded', function() {
    // 检查联系弹窗元素是否存在
    const contactModal = document.getElementById('contact-modal');
    const contactTrigger = document.querySelector('.contact-modal-trigger');
    
    // 如果触发按钮存在，添加点击事件监听器
    if (contactTrigger) {
        contactTrigger.addEventListener('click', function(e) {
            e.preventDefault();
            
            // 直接调用弹窗函数
            if (typeof openContactModal === 'function') {
                openContactModal();
            } else {
                // 备用方案：直接显示弹窗
                if (contactModal) {
                    contactModal.style.display = 'flex';
                    contactModal.style.zIndex = '999999';
                    document.body.style.overflow = 'hidden';
                    
                    // 添加动画效果
                    setTimeout(() => {
                        const modalContent = contactModal.querySelector('.contact-modal-content');
                        if (modalContent) {
                            modalContent.classList.add('modal-show');
                        }
                    }, 10);
                }
            }
        });
    }
    
    // 确保弹窗关闭功能
    const closeButtons = document.querySelectorAll('.contact-modal-close, .contact-modal-overlay');
    closeButtons.forEach(button => {
        button.addEventListener('click', function() {
            if (contactModal) {
                const modalContent = contactModal.querySelector('.contact-modal-content');
                if (modalContent) {
                    modalContent.classList.remove('modal-show');
                }
                
                setTimeout(() => {
                    contactModal.style.display = 'none';
                    document.body.style.overflow = 'auto';
                }, 300);
            }
        });
    });
});

</script>