<style>
/* 返现专区样式 - 基于Ghost主题风格 */

/* 增加卡片间距，让布局更整齐 */
.cashback-grid {
    display: grid;
    grid-template-columns: repeat(auto-fill, minmax(320px, 1fr));
    gap: 32px; /* 增加间距从24px到32px */
    margin-top: 40px;
    padding: 0 16px; /* 添加左右内边距 */
}

/* 卡片基础样式 */
.cashback-card {
    background: var(--bg-surface, #ffffff);
    border-radius: 16px;
    box-shadow: 0 4px 20px rgba(0, 0, 0, 0.08);
    transition: all 0.3s ease;
    border: 1px solid var(--border-primary, #e2e8f0);
    overflow: hidden;
    display: flex;
    flex-direction: column;
    margin-bottom: 16px; /* 额外的底部间距 */
}

.cashback-card:hover {
    transform: translateY(-4px);
    box-shadow: 0 8px 30px rgba(0, 0, 0, 0.12);
}

/* 卡片头部 */
.card-header {
    padding: 24px 24px 20px; /* 增加内边距 */
    border-bottom: 1px solid var(--border-primary, #e2e8f0);
}

.exchange-info {
    display: flex;
    align-items: center;
    gap: 16px; /* 增加logo和文字间距 */
}

.exchange-logo {
    flex-shrink: 0;
}

.logo-placeholder {
    width: 52px; /* 稍微增大logo */
    height: 52px;
    border-radius: 12px;
    display: flex;
    align-items: center;
    justify-content: center;
    font-weight: 700;
    font-size: 14px;
}

.exchange-details {
    flex: 1;
}

.exchange-name {
    font-size: 1.8rem;
    font-weight: 700;
    margin: 0 0 6px 0; /* 增加底部间距 */
    color: var(--text-primary, #1e293b);
}

.exchange-type {
    font-size: 1.4rem;
    color: var(--text-secondary, #64748b);
    margin: 0;
}

/* 卡片主体 */
.card-body {
    padding: 24px; /* 增加内边距 */
    flex: 1;
    display: flex;
    align-items: center;
}

.cashback-info {
    text-align: center;
    width: 100%;
}

.cashback-rate {
    font-size: 3.2rem; /* 稍微增大返现率字体 */
    font-weight: 800;
    color: #10ac84;
    margin: 16px 0; /* 增加上下间距 */
}

.cashback-label {
    font-size: 1.6rem;
    font-weight: 600;
    color: var(--color-secondary-text);
}

/* 卡片底部 */
.card-footer {
    padding: 24px; /* 增加内边距 */
    border-top: 1px solid var(--border-primary, #e2e8f0);
}

.button-group {
    display: flex;
    gap: 16px; /* 增加按钮间距 */
    justify-content: center;
}

.btn-primary, .btn-secondary {
    display: inline-flex;
    align-items: center;
    justify-content: center;
    width: 100%;
    padding: 14px 24px; /* 增加按钮内边距 */
    border-radius: 10px; /* 稍微增大圆角 */
    font-weight: 600;
    text-decoration: none;
    transition: all 0.2s ease;
    font-size: 1.4rem;
}

.btn-primary {
    background: var(--ghost-accent-color);
    color: white;
}

.btn-primary:hover {
    background: color-mix(in srgb, var(--ghost-accent-color) 80%, black);
    color: white;
    transform: translateY(-1px);
}

.btn-secondary {
    background: var(--color-border);
    color: var(--color-darkgrey);
}

.btn-secondary:hover {
    background: var(--color-midgrey);
    color: white;
    transform: translateY(-1px);
}

/* 响应式调整 */
@media (max-width: 768px) {
    .cashback-grid {
        grid-template-columns: 1fr;
        gap: 24px;
        padding: 0 8px;
    }
    
    .card-header, .card-body, .card-footer {
        padding: 20px;
    }
    
    .button-group {
        gap: 12px;
    }
}

/* 大屏幕上的优化 */
@media (min-width: 1200px) {
    .cashback-grid {
        grid-template-columns: repeat(auto-fill, minmax(350px, 1fr));
        gap: 40px;
        max-width: 1200px;
        margin: 40px auto 0;
    }
}
</style>

<script>
// 轮播功能
let currentSlide = 0;
const slides = document.querySelectorAll('.tutorial-slide');
const indicators = document.querySelectorAll('.indicator');

function showSlide(index) {
    slides.forEach((slide, i) => {
        slide.classList.toggle('active', i === index);
    });
    indicators.forEach((indicator, i) => {
        indicator.classList.toggle('active', i === index);
    });
    currentSlide = index;
}

// 自动轮播
setInterval(() => {
    currentSlide = (currentSlide + 1) % slides.length;
    showSlide(currentSlide);
}, 4000);

// 指示器点击
indicators.forEach((indicator, index) => {
    indicator.addEventListener('click', () => showSlide(index));
});

// 筛选功能
const filterBtns = document.querySelectorAll('.filter-btn');
const cards = document.querySelectorAll('.cashback-card');

filterBtns.forEach(btn => {
    btn.addEventListener('click', () => {
        // 更新按钮状态
        filterBtns.forEach(b => b.classList.remove('active'));
        btn.classList.add('active');
        
        const category = btn.dataset.category;
        
        // 筛选卡片
        cards.forEach(card => {
            if (category === 'all' || card.dataset.category === category) {
                card.style.display = 'block';
            } else {
                card.style.display = 'none';
            }
        });
    });
});

// 显示详情功能
